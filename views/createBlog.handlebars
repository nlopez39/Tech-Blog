<div id="new-post">
  <h3>Create a New Blog Post:</h3>

  <form class="form new-project-form">
    <div class="form-group">
      <label for="blog-title">Title</label>
      <input
        class="form-input"
        type="text"
        id="blog-title"
        name="blog-title"
      />
    </div>
    <div class="form-group">
      <label for="blog-content">Content</label>
      <input
        class="form-input"
        type="text"
        id="blog-content"
        name="blog-content"
      />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">
        Create
      </button>
    </div>
  </form>
</div>
<script src="/public/createBlog.js"></script>
